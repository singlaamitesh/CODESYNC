# ========================================
# Environment Variables Template
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# ========================================
# OpenRouter AI API
# ========================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# ========================================
# Database Configuration
# ========================================
# Local Development:
DATABASE_URL=postgresql://username:password@localhost:5432/codesync_db

# Production (Neon.tech example):
# DATABASE_URL=postgresql://username:password@ep-xxxxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# ========================================
# Redis Configuration
# ========================================
# Local Development:
REDIS_URL=redis://localhost:6379

# Production (Redis Cloud example):
# REDIS_URL=redis://default:password@redis-xxxxx.cloud:12345

# ========================================
# CORS Configuration
# ========================================
# Frontend URL for CORS (comma-separated for multiple)
FRONTEND_URL=http://localhost:8080

# Production:
# FRONTEND_URL=https://your-site.netlify.app,https://your-custom-domain.com

# ========================================
# Server Configuration (Optional)
# ========================================
PORT=8000
HOST=0.0.0.0
DEBUG=true

# ========================================
# Security (Optional)
# ========================================
# Generate a strong secret key for production
# SECRET_KEY=your-super-secret-key-here
